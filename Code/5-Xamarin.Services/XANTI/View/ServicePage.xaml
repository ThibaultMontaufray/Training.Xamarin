<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Service"
             x:Class="XANTI.View.ServicePage">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="ServiceLabel" Text="Welcome to service process!"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
            
            <Button Text="Start service" 
                x:Name="btnServiceStart"
                Clicked="btnServiceStart_Clicked"
                VerticalOptions="End" 
                HorizontalOptions="FillAndExpand" />
            
            <Button Text="Stop service" 
                x:Name="btnServiceStop"
                Clicked="btnServiceStop_Clicked"
                VerticalOptions="End" 
                HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>