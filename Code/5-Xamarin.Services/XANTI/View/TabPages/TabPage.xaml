<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:XANTI.View.TabPages"
             x:Class="XANTI.View.TabPage"
             Title="Tabs">
    
    <TabbedPage.BarBackgroundColor>
        <OnPlatform x:TypeArguments="Color">
            <OnPlatform.iOS>#005C5A</OnPlatform.iOS>
            <OnPlatform.Android>#005C5A</OnPlatform.Android>
        </OnPlatform>
    </TabbedPage.BarBackgroundColor>

    <TabbedPage.SelectedTabColor>
        <OnPlatform x:TypeArguments="Color">
            <OnPlatform.iOS>#B6E2DF</OnPlatform.iOS>
            <OnPlatform.Android>#B6E2DF</OnPlatform.Android>
        </OnPlatform>
    </TabbedPage.SelectedTabColor>

    <TabbedPage.BarTextColor>
        <OnPlatform x:TypeArguments="Color">
            <OnPlatform.iOS>#B6E2DF</OnPlatform.iOS>
            <OnPlatform.Android>#B6E2DF</OnPlatform.Android>
        </OnPlatform>
    </TabbedPage.BarTextColor>

    <views:WeatherPage IconImageSource="weather.png" />
    <views:ForecastPage IconImageSource="forecast.png" />
    <views:Settings IconImageSource="settings.png" />

</TabbedPage>