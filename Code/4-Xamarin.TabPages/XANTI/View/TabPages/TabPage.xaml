<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:XANTI.View.TabPages"
             x:Class="XANTI.View.TabPage"
             Title="Tabs">

    <TabbedPage.BarBackgroundColor>
        <OnPlatform x:TypeArguments="Color">
            <OnPlatform.iOS>#E5B87E</OnPlatform.iOS>
            <OnPlatform.Android>#E5B87E</OnPlatform.Android>
        </OnPlatform>
    </TabbedPage.BarBackgroundColor>

    <TabbedPage.BarTextColor>
        <OnPlatform x:TypeArguments="Color">
            <OnPlatform.iOS>#000</OnPlatform.iOS>
            <OnPlatform.Android>#000</OnPlatform.Android>
        </OnPlatform>
    </TabbedPage.BarTextColor>
    
    <views:BodyPage Icon="body.png" />
    <views:PersonalityPage Icon="personality.png" />

</TabbedPage>